
  <div class="container">
    <%if @is_nil %>
    <%elsif @is_playing %>
      <h2 class="display-4"><%=@display_name %> is currently playing: <%=@currently_playing.name %></h2>
    <%else%>
    <h2 class="display-4"><%=@display_name %> is not playing anything.</h2>
    <%end %>
  </div>
  <div class="jumbotron">
    <h1>We're sorry QueueShare isn't functional right now...</h1>
    <h2>But we hope you'll like the playlist we've made you</h2>
    <h3>Give it a listen in your Spotify library</h3>
    <div class="container" style="margin-top: 3mm">
      <table class="table table-dark table-striped">
        <thead>
        <tr>
          <th scope="col">Song</th>
          <th scope="col">Artist</th>
        </tr>
        </thead>
        <%@tracks.each do |track| %>
          <tr>
            <td><%=track.name %></td>
            <td>
              <%track.artists.each do |artist| %>
                <%=artist.name %>
              <%end %>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
